{% extends '@SyliusUi/Form/theme.html.twig' %}

{% block setono_sylius_pickup_point_choice_row %}
    <div class="setono-sylius-pickup-point-field {% if required %}required {% endif %}field{% if (not compound or force_error|default(false)) and not valid %} error{% endif %}">
        {{- form_label(form) -}}
        {{- form_widget(form, {'attr': {'class': 'setono-sylius-pickup-point-field-input'}}) -}}
        {{- form_errors(form) -}}

        {# @todo Omit using prototype like this as it present at DOM and querySelector results #}
        <div class="setono-sylius-pickup-point-field-choice-prototype" style="display: none;">
            <div class="item">
                <div class="field">
                    <div class="ui radio checkbox">
                        <input id="{{ form.vars.id }}_{code}" class="setono-sylius-pickup-point-field-choice-field"
                               type="radio" name="{{ form.vars.id }}[pickupPoint]" required value="{code}">
                    </div>
                </div>
                <div class="content">
                    <div class="title">
                        <span class="header">
                            <label for="{{ form.vars.id }}_{code}" class="required">
                                {name}, {full_address}, {distance}
                            </label>
                        </span>
                        <i class="dropdown icon"></i>
                    </div>
                    <div class="content">
                        {{ 'setono_sylius_pickup_point.ui.identifier'|trans }}: {code}<br>
                        {{ 'setono_sylius_pickup_point.ui.opening_hours'|trans }}: <br>
                        {opening_hours}

                        {# @todo holidays hours #}
                        <br>
                        <a href="http://maps.google.com/maps?&z=16&q={latitude}+{longitude}" target="_blank">{{ 'setono_sylius_pickup_point.ui.see_on_map'|trans }}</a>

                    </div>
                </div>
            </div>
        </div>
        <div class="setono-sylius-pickup-point-field-choices ui items accordion"></div>
    </div>



{% endblock %}
